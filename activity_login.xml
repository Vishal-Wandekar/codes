<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/linkedin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"/>

    <EditText
        android:id="@+id/etMobileNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:layout_below="@+id/imgLogo"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:hint="@string/mobile_number" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="6dp"
        android:layout_below="@+id/etMobileNumber"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/password"/>

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="6dp"
        android:layout_below="@+id/img5Logo"
        android:background="@color/mycolor"
        android:text="@string/log_in"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/txtForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:layout_below="@+id/etPassword"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:padding="6dp"/>

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/register_yourself"
        android:textSize="16sp"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/img2Logo"
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:src="@drawable/facebook_logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/img10Logo" />

    <EditText
        android:id="@+id/etMobileNumber2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:padding="6dp"
        android:layout_below="@+id/img2Logo"
        android:inputType="phone"
        android:maxLength="10"
        android:maxLines="1"
        android:hint="@string/mobile_number" />

    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="6dp"
        android:layout_below="@+id/etMobileNumber2"
        android:inputType="textPassword"
        android:maxLines="1"
        android:hint="@string/password"/>



    <TextView
        android:id="@+id/txtForgotPassword2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password"
        android:layout_below="@+id/etPassword2"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:textSize="16sp"
        android:padding="6dp"/>

    <ImageView
    android:id="@+id/img3Logo"
    android:layout_width="90dp"
    android:layout_height="50dp"
    android:layout_below="@+id/txtForgotPassword2"
    android:layout_marginTop="17dp"
    android:src="@drawable/images2" />

    <ImageView
        android:id="@+id/img4Logo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtForgotPassword2"
        android:layout_marginTop="17dp"
        android:src="@drawable/images2" />

    <ImageView
        android:id="@+id/img5Logo"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtForgotPassword2"
        android:layout_marginTop="17dp"
        android:src="@drawable/images2"
        android:layout_toRightOf="@+id/img4Logo"/>

    <ImageView
        android:id="@+id/img6Logo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtForgotPassword2"
        android:layout_marginTop="17dp"
        android:src="@drawable/images2"
        android:layout_toLeftOf="@+id/img5Logo"/>

    <ImageView
        android:id="@+id/img10Logo"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtForgotPassword"
        android:layout_marginTop="17dp"
        android:src="@drawable/images2" />

    <ImageView
        android:id="@+id/img9Logo"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtForgotPassword"
        android:layout_marginTop="17dp"
        android:src="@drawable/images2" />

    <ImageView
        android:id="@+id/img8Logo"
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtForgotPassword"
        android:layout_marginTop="17dp"
        android:src="@drawable/images2"
        android:layout_toRightOf="@+id/img4Logo"/>

    <ImageView
        android:id="@+id/img7Logo"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtForgotPassword"
        android:layout_marginTop="17dp"
        android:src="@drawable/images2"
        android:layout_toLeftOf="@+id/img5Logo"/>


</RelativeLayout>